<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/register.css">
    <title><%= title %></title>
</head>
<body class="register-body">
    <main class="register-container">
        <h1><%= title %></h1>
        <% if (typeof flash !== 'undefined' && flash) { %>
            <div class="flash-message flash-<%= flash.type || 'info' %>">
                <%= flash.message %>
            </div>
        <% } %>

        <% if (errors) { %>
           <ul class="notice">
            <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
            <%  }) %>
           </ul>
          <% } %>
 

        

        <form action="/inv/account/register" method="POST">
            <div>
                <label for="firstname">FirstName:</label>
                <input type="text" id="username" name="account_firstname" required>
            </div>

            <div>
                <label for="lastname">LastName:</label>
                <input type="text" id="lastname" name="account_lastname" required>
            </div>

            <div>
                <label for="email">Email address:</label>
                <input type="email" id="email" name="account_email" required>
            </div>

            <div>
                <label for="password">Password:</label>
                <div class="password-hint">Make sure the password is at least 12 characters and has at least 1 uppercase character, 1 number, and 1 special character.</div>
                <input type="password" id="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$".>
            </div>
            <button type="submit" class="register-button">Register</button>
    </main>
    
</body>
</html>